
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // PUBLIC: User Profiles
    // Anyone can read user profiles, but only the owner can write to them.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // PRIVATE: Job Applications
    // Users can only read/write their own job applications.
    // The 'uid' field on the document must match the authenticated user's ID.
    match /jobApplications/{jobApplicationId} {
      allow read, delete, update: if isOwner(resource.data.uid);
      allow create: if isOwner(request.resource.data.uid);
    }
  }
}
